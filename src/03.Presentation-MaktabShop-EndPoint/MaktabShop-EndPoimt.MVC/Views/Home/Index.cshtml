@model HomeIndexViewModel
@{
    ViewData["Title"] = "خانه";
}

<h1 style="font-size:1.5rem; margin-bottom:1rem;">دسته‌ها</h1>
<div style="display:flex; gap:1rem; flex-wrap: wrap; margin-bottom:2rem;">
    @foreach (var cat in Model.Categories)
    {
        <a href="@Url.Action("List", "Category", new { id = cat.Id })"
           style="padding:0.5rem 1rem; background-color:#f2f2f2; text-decoration:none; color:#333; border-radius:3px;">
            @cat.Name
        </a>
    }
</div>

<h2 style="font-size:1.4rem; margin-bottom:1rem;">محصولات</h2>
<div class="products-grid">
    @foreach (var p in Model.Products)
    {
        <div class="product-card">
            <img src="@p.ImageUrl" alt="@p.Name" />
            <div class="info">
                <h3>@p.Name</h3>
                <div class="price">@p.Price.ToString("N0") تومان</div>
                <a href="@Url.Action("Details", "Product", new { id = p.Id })" class="btn">جزئیات</a>
            </div>
        </div>
    }
</div>