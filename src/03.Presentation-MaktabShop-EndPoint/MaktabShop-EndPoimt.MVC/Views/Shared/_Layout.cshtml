@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - فروشگاه</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="container">
        <div style="display:flex; justify-content: space-between; align-items: center;">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">فروشگاه من</a>
            </div>
            <nav>
                <a href="@Url.Action("Index", "Home")">خانه</a>
                <a href="@Url.Action("Index", "Cart")">سبد خرید</a>
                @{
                    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
                }
                @if (!string.IsNullOrEmpty(username))
                {
                    <span>سلام، @username</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit">خروج</button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">ورود</a>
                    <a href="@Url.Action("Register", "Account")">ثبت نام</a>
                }
            </nav>
        </div>
    </header>

    <main class="container" style="margin-top:2rem;">
        @RenderBody()
    </main>

    <footer class="container" style="margin-top:2rem; padding:1rem 0; border-top:1px solid #e5e5e5; text-align:center; color:#777;">
        © ۲۰۲۵ فروشگاه من
    </footer>
</body>
</html>