@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - فروشگاه</title>

 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />

   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header class="bg-light border-bottom shadow-sm mb-4">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div class="logo">
                <a class="h4 text-decoration-none text-dark"
                   href="@Url.Action("Index", "Home")">فروشگاه من</a>
            </div>

            <nav class="nav align-items-center">
                <a class="nav-link text-dark" href="@Url.Action("Index", "Home")">خانه</a>
                <a class="nav-link text-dark" href="@Url.Action("Index", "Cart")">سبد خرید</a>

                @{
                    var username = HttpContextAccessor.HttpContext?.User.Identity?.Name;
                }

                @if (!string.IsNullOrEmpty(username))
                {
                    <a class="nav-link text-dark"
                       asp-controller="UserPanel" asp-action="Index">پنل کاربری</a>

                    <span class="nav-link text-secondary">سلام، @username</span>

                    <form asp-controller="Account" asp-action="Logout"
                          method="post" class="d-inline">
                        <button type="submit"
                                class="btn btn-sm btn-outline-danger">
                            خروج
                        </button>
                    </form>
                }
                else
                {
                    <a class="nav-link text-dark"
                       href="@Url.Action("Login", "Account")">ورود</a>
                    <a class="nav-link text-dark"
                       href="@Url.Action("Register", "Account")">ثبت نام</a>
                }
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 mt-4 border-top">
        © ۲۰۲۵ فروشگاه من
    </footer>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>