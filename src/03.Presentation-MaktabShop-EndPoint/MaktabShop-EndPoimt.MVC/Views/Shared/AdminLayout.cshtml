<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - پنل مدیریت</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">پنل مدیریت</a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "ProductAdmin")">محصولات</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "CategoryAdmin")">دسته‌ها</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "UserAdmin")">کاربران</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "OrderAdmin")">سفارش‌ها</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="container mt-4">
        @RenderBody()
    </section>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>