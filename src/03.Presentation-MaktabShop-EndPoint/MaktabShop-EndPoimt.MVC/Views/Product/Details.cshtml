@model ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="product-detail">
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px; width:100%; object-fit:cover;" />
    <div class="detail-info">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <div class="price" style="font-weight:bold; margin:1rem 0;">@Model.Price.ToString("N0") تومان</div>
        @if (Model.Stock > 0)
        {
            <form asp-controller="Cart" asp-action="Add" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <label>تعداد: </label>
                <input type="number" name="stock" value="1" min="1" max="@Model.Stock" />
                <button type="submit" class="btn" style="margin-top:0.5rem;">افزودن به سبد</button>
            </form>
        }
        else
        {
            <span style="color:red;">ناموجود</span>
        }
    </div>
</div>