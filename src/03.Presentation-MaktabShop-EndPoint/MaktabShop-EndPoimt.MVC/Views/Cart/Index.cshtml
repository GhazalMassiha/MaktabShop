@model OrderViewModel
@{
    ViewData["Title"] = "سبد خرید";
}
<h2>سبد خرید</h2>

@if (Model.Items == null || !Model.Items.Any())
{
    <p>سبد خرید خالی است.</p>
}
else
{
    <form method="post" asp-action="Update" asp-controller="Cart">
        <table class="cart-table">
            <thead>
                <tr>
                    <th>محصول</th>
                    <th>قیمت واحد</th>
                    <th>تعداد</th>
                    <th>قیمت کل</th>
                    <th>اقدامات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice.ToString("N0") تومان</td>
                        <td>
                            <input type="number" name="stock" value="@item.Stock" min="1" />
                            <input type="hidden" name="productId" value="@item.ProductId" />
                        </td>
                        <td>@item.TotalPrice.ToString("N0") تومان</td>
                        <td>
                            <button formaction="@Url.Action("Remove", "Cart", new { productId = item.ProductId })" formmethod="post">حذف</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="cart-total" style="margin-top:1rem;">
            جمع کل: @Model.Total.ToString("N0") تومان
        </div>

        <div style="margin-top:1rem;">
            <button type="submit">به‌روز رسانی تعداد</button>
            <a asp-controller="Checkout" asp-action="Index" class="btn" style="margin-left:1rem;">نهایی کردن خرید</a>
        </div>
    </form>
}