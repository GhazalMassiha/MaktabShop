@model UserEditProfileViewModel

<div class="container mt-5">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h4>ویرایش پروفایل</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">نام</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">تلفن</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">آدرس</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Wallet" class="form-label">کیف پول (تومان)</label>
                        <input asp-for="Wallet" class="form-control" type="number" step="0.01" />
                    </div>
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                </form>
            </div>
        </div>
    </div>
</div>