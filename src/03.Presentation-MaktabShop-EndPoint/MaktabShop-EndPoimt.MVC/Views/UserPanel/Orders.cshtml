@model List<Core_MaktabShop.Domain.Core.OrderAgg.DTOs.OrderDto>

<div class="container mt-5">
    <h3 class="mb-4">سفارش‌های من</h3>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>شناسه</th>
                <th>جمع مبلغ</th>
                <th>تاریخ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.TotalPrice.ToString("N0") تومان</td>
                    <td>
                        @(o.CreatedAt > DateTime.MinValue
                                            ? o.CreatedAt.ToString("yyyy-MM-dd")
                                            : "-")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>